<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.james.mapper.MessageMapper">

    <!-- 查询结果先按未读，再到已读；相同的便按时间大到小   -->
    <select id="showByTid" parameterType="int" resultType="Message">
        select * from message where tid=#{tid} ORDER BY state DESC, date DESC
    </select>

    <insert id="addMessage" parameterType="Message">
        insert into message(fid,tid,title,content,state,date) values(#{fid},#{tid},#{title},#{content},1,NOW())
    </insert>

    <select id="findById" parameterType="int" resultType="Message">
        select * from message where id=#{id}
    </select>

    <delete id="deleteMessage" parameterType="int">
        delete from message where id=#{id}
    </delete>

<!-- 可以进一步修改此句为动态sql，可以修改message各项数据   -->
    <update id="updateMessage" parameterType="Message">
        update message set state=#{state} where id=#{id}
    </update>

</mapper>